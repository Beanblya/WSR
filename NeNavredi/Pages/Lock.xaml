<Page x:Class="NeNavredi.Pages.Lock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeNavredi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lock" Loaded="Page_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Система заблокирована. Вы автоматически будете перенаправлены на страницу авторизации через:" FontSize="16"></TextBlock>
            <TextBlock x:Name="TextTimer" HorizontalAlignment="Center" TextAlignment="Center"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
